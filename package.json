{
  "name": "lightrail",
  "version": "0.0.1",
  "description": "A serverless web framework",
  "author": "Jason Maurer",
  "license": "MIT",
  "homepage": "https://github.com/jsonmaur/lightrail",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsonmaur/lightrail.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "serverless",
    "cloud code",
    "lambda",
    "function",
    "functional",
    "endpoint",
    "api",
    "web",
    "framework",
    "http",
    "lambda",
    "aws"
  ],
  "files": [
    "bin/",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "main": "lib/index.js",
  "bin": {
    "lightrail": "bin/lightrail"
  },
  "scripts": {
    "test:lint": "standard --verbose | snazzy",
    "test:integration": "ava test/**/*.js -s",
    "test:unit": "rm -rf coverage .nyc_output && nyc ava src/**/*.test.js -a",
    "test": "zoo NODE_ENV=testing run-s test:*",
    "posttest": "nyc report -r=lcov",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "prebuild": "rm -rf lib",
    "build": "babel src -d lib --ignore *.test.js --no-comments",
    "watch": "npm run build -- -w -s",
    "prepublish": "npm test && npm run build"
  },
  "devDependencies": {
    "ava": "0.15.2",
    "babel-cli": "6.10.1",
    "babel-eslint": "6.1.0",
    "babel-plugin-transform-runtime": "6.9.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-2": "6.11.0",
    "babel-register": "6.9.0",
    "coveralls": "2.11.9",
    "npm-run-all": "2.3.0",
    "nyc": "6.6.1",
    "proxyquire": "1.7.10",
    "sinon": "1.17.4",
    "snazzy": "4.0.0",
    "source-map-support": "0.4.1",
    "standard": "7.1.2",
    "zoo": "0.1.5"
  },
  "dependencies": {
    "babel-runtime": "6.9.2",
    "fs-extra": "0.30.0",
    "glob": "7.0.5",
    "media-typer": "0.3.0",
    "micromatch": "2.3.10",
    "raw-body": "2.1.7",
    "validator": "5.4.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "ava": {
    "serial": true,
    "require": "babel-register",
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "include": [
      "src"
    ],
    "require": [
      "babel-register"
    ]
  }
}
